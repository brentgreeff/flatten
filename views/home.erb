<form action="flatten" method="get">
  <div class="form-group">
    <label for="entered_array">Enter an array that u want to flatten</label>

    <input type="text" class="form-control" id="entered_array" name="entered_array" value="<%= @entered_array %>"  placeholder="[1,2],[3,4]">

    <p class="help-block">(Outer brackets optional)</p>

    <button type="submit" class="btn btn-default">
      Flatten
    </button>
  </div>
</form>
